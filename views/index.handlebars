<header class="container-fluid bg-warning py-3 centered">

  <h1>Eat-Da-Burger !</h1>

</header>

<div class="container-fluid">

  <div class="row">

    <!-- Column 1 -->
    <div class="col-4">

      {{#each burgers}}
        {{#unless devoured}}
          <div class="row">

            <div class="col-6">
              <div class="burger-tablet">{{burger_name}}</div>
            </div>

            <div class="col-6">
              <button class="devoure-it" data-id="{{id}}">Devoure It !</button>
            </div>

          </div>
        {{/unless}}
      {{/each}}

    </div>

    <!-- Column 2 --> 
    <div class="col-4">

      <form id="add-burger" method="POST" action="/api/burgers">
        <input type="text" id="bn" name="name">
        <button type="submit">Submit</button>
      </form>

    </div>

    <!-- Column 3 -->
    <div class="col-4">

      {{#each burgers}}
        {{#if devoured}}
          <div class="row">
            <div class="col-12">
              <div class="burger-tablet">{{burger_name}}</div>
            </div>
          </div>
        {{/if}}
      {{/each}}

    </div>


  </div> <!-- end of row -->

</div> <!-- end of container -->



